<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NBStocks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="background">@color/black</item>
        <item name="actionModeBackground">@color/darkGrey</item>
        <item name="colorPrimary">@color/darkBlue</item>
        <item name="colorPrimaryVariant">@color/darkBlueVariant</item>
        <item name="colorOnPrimary">@color/darkGrey</item>
        <item name="colorOnPrimaryContainer">@color/darkGreyVariant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="colorSecondaryVariant">@color/lightBlueVariant</item>
        <item name="colorOnSecondary">@color/lightGrey</item>
        <item name="colorOnSecondaryContainer">@color/lightGreyVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/red_dark</item>
        <item name="colorOnError">@color/green_dark</item>
    </style>
</resources>