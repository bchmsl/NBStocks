<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCompanyLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        tools:src="@drawable/ic_logo"
        tools:tint="?attr/colorOnSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvItemSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        tools:text="Company"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCompanyLogo"
        app:layout_constraintStart_toEndOf="@+id/ivCompanyLogo"
        app:layout_constraintTop_toTopOf="@+id/ivCompanyLogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWatchlistPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        tools:text="$458.49"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivCompanyLogo"
        app:layout_constraintTop_toBottomOf="@+id/ivCompanyLogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWatchlistPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="sans-serif-light"
        tools:text="+5.5%"
        android:textColor="#8BC34A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvItemSymbol"
        app:layout_constraintTop_toTopOf="@+id/ivCompanyLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>